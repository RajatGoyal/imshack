<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="100%" height="119">
	<s:layout>
		<s:VerticalLayout paddingTop="3" paddingBottom="3" />
	</s:layout>
	
	<mx:VBox width="863" height="101">
		<mx:HBox width="585" height="21">
			<s:Label text="Tweeted By: {data.from_user}"/>
			<s:Label text=" at: {data.created_at}"/>
		</mx:HBox>
		<mx:HBox width="855" height="65">
			<mx:Image source="{data.profile_image_url}" width="64" height="61"/>
			<s:TextArea text="{data.text}" width="100%" height="57"/>
		</mx:HBox>
	</mx:VBox>
	
	
</s:ItemRenderer>
